<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/ysf_bubble_max_width"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/ysf_iv_activity_img"
        android:layout_width="match_parent"
        android:layout_height="92dp"
        android:contentDescription="@null"
        android:scaleType="centerCrop"
        android:src="@drawable/ysf_image_placeholder_grey" />

    <TextView
        android:id="@+id/ysf_tv_activity_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:textColor="@color/ysf_black_222222"
        android:textSize="@dimen/ysf_text_size_15" />

    <TextView
        android:id="@+id/ysf_btn_activity_action"
        android:layout_width="match_parent"
        android:layout_height="@dimen/ysf_button_small_height"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/ysf_btn_white_blue_bg_selector"
        android:gravity="center"
        android:textColor="@color/ysf_blue_5092e1"
        android:textSize="@dimen/ysf_text_size_15" />
</LinearLayout>