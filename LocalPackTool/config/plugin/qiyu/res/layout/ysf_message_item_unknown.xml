<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/message_item_unsupport_container"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/ysf_message_item_round_bg"
    android:paddingBottom="10dp"
    android:paddingTop="10dp">

    <ImageView
        android:id="@+id/message_item_unsupport_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:contentDescription="@string/ysf_empty"
        android:src="@drawable/ysf_unsupport_mime_type" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="6dip"
        android:layout_marginRight="4dip"
        android:layout_toRightOf="@id/message_item_unsupport_image"
        android:orientation="vertical">

        <TextView
            android:id="@+id/message_item_unsupport_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="left"
            android:singleLine="true"
            android:text="@string/ysf_unknown_title"
            android:textColor="@color/ysf_black_333333"
            android:textSize="@dimen/ysf_text_size_16" />

        <TextView
            android:id="@+id/message_item_unsupport_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dip"
            android:ellipsize="end"
            android:gravity="left"
            android:singleLine="true"
            android:text="@string/ysf_unknown_desc"
            android:textColor="@color/ysf_grey_555555"
            android:textSize="@dimen/ysf_text_size_13" />
    </LinearLayout>
</RelativeLayout>