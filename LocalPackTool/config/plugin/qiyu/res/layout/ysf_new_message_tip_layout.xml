<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/new_message_tip_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:background="@color/ysf_grey_f8f8f8"
    android:gravity="center"
    android:orientation="horizontal"
    android:padding="10dp"
    android:visibility="gone">

    <com.qiyukf.nim.uikit.common.ui.imageview.HeadImageView
        android:id="@+id/new_message_tip_head_image_view"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginRight="@dimen/ysf_bubble_head_margin_horizontal"
        android:contentDescription="@string/ysf_empty" />

    <TextView
        android:id="@+id/new_message_tip_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_weight="1"
        android:singleLine="true"
        android:textColor="#575757"
        android:textSize="@dimen/ysf_text_size_12" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|center_vertical"
        android:background="@drawable/ysf_message_unread_news_icon_selector"
        android:contentDescription="@string/ysf_empty" />
</LinearLayout>