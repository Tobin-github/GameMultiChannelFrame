        <layer-list>
            <item android:gravity="center">
                <shape android:shape="oval">
                    <stroke android:width="1dp" android:color="@color/ysf_blue_5092e1" />
                    <size android:width="10dp" android:height="10dp" />
                </shape>
            </item>
            <item android:gravity="center">
                <shape android:shape="oval">
                    <solid android:color="@color/ysf_blue_5092e1" />
                    <size android:width="6dp" android:height="6dp" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item>
        <shape android:shape="oval">
            <solid android:color="#D8D8D8" />
            <size android:width="6dp" android:height="6dp" />
        </shape>
    </item>
</selector>