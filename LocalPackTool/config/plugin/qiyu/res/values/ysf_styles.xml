<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="ysf_window_theme" parent="android:Theme.NoTitleBar">
        <item name="android:windowBackground">@color/ysf_window_background</item>
    </style>

    <style name="ysf_list_view" parent="@android:style/Widget.ListView">
        <item name="android:scrollbarThumbVertical">@drawable/ysf_scrollbar_handle_holo_dark</item>
        <item name="android:scrollbarThumbHorizontal">@drawable/ysf_scrollbar_handle_holo_dark
        </item>
    </style>

    <style name="ysf_horizontal_light_thin_divider">
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/ysf_grey_d9d9d9</item>
    </style>

    <style name="ysf_dialog_default_style" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowSoftInputMode">stateHidden|adjustResize</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="ysf_popup_dialog_style" parent="@style/ysf_dialog_default_style">
        <item name="android:windowAnimationStyle">@style/ysf_dialog_window_animation_style</item>
    </style>

    <style name="ysf_form_dialog_style" parent="@android:style/Theme.Panel">
        <item name="android:windowAnimationStyle">@style/ysf_dialog_window_animation_style</item>
    </style>

    <style name="ysf_dialog_window_animation_style" parent="@android:style/Animation.Dialog">
        <item name="@android:windowEnterAnimation">@anim/ysf_dialog_enter_animation</item>
        <item name="@android:windowExitAnimation">@anim/ysf_dialog_exit_animation</item>
    </style>
</resources>